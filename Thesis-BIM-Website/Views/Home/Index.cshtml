@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}
<!-- Masthead -->
<header class="masthead">
    <div class="text-center">

        @if (SignInManager.IsSignedIn(User))
        {
            <h1 class="display-4" style="color: antiquewhite">Welcome @User.Identity.Name</h1>
            <p style="color: antiquewhite">
                Go to <a asp-controller="Invoices" asp-action="Create">Invoices</a>
                to create a reminder.
            </p>
        }
        else
        {
            <div class="container h-100">
                <div class="row h-100 align-items-center justify-content-center text-center">
                    <div class="col-lg-10 align-self-end">
                        <h1 class="text-uppercase text-white font-weight-bold">Afraid of missing the paydate?</h1>
                        <hr class="divider my-4">
                    </div>
                    <div class="col-lg-8 align-self-baseline">
                        <p class="text-white-75 font-weight-light mb-5">Do you always forget your payments? Don't worry, with BIM you will never forget an payment again. Create an invoice or manage your bills. You can also scan your invoice from our mobile application and send it directly to our website</p>
                        <a class="btn btn-light btn-xl js-scroll-trigger" asp-controller="Invoices" asp-action="Index">Get Started here!</a>
                    </div>
                </div>
            </div>
        }
    </div>
</header>
